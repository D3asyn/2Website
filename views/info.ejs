<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello World Info</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-dark text-light pt-5">
    <%- include('./partials/nav'); %>
    <div class="container pt-5">
        <div class="row">
            <% infos.forEach(person => { %>
                <div class="col-md-4 mb-3">
                    <div class="card bg-danger p-2 m-2 rounded-3">
                        <img src="<%= person.Image  %>" class="card-img-top mx-auto" style="display:block;width: 200px; height: 200px;">
                        <div class="card-body bg-dark text-warning p-2 m-2 rounded-3">
                            <h5 class="card-title"> Name: <%= person.Name %></h5>
                            <p class="card-text"> Email: <%= person.Email %></p>
                            <p class="card-text"> Phone: <%= person.Phone %></p>
                            <p class="card-text"> Description: <%= person.Description %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('./partials/reviewModal'); %>
    <footer class="fixed-bottom bg-dark">
        <%- include('./partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
