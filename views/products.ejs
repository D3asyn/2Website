<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello World Products</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-dark text-light pt-5">
    <%- include('./partials/nav'); %>
    <%- include('./partials/reviewModal'); %>
    <div class="container text-center pt-5">
        <div class="row align-items-start">
            <% devices.forEach(device => { %>
                <div class="col-md-4 card mb-5 bg-danger p-2 m-2 rounded-3" style="width: 18rem">
                    <img src="<%= device.Image %>" class="card-img-top mx-auto" style="display:block;width: 200px; height: 200px;" alt="..." />
                    <div class="card-body bg-dark text-warning p-2 m-2 rounded-3">
                        <h5 class="card-title">Brand: <%= device.Brand %></h5>
                        <p class="card-text"><strong>Model:</strong> <%= device.ModelName %></p>
                        <p class="card-text"><strong>OS:</strong> <%= device.OS %></p>
                        <p class="card-text"><strong>Year:</strong> <%= device.Release %></p>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <footer class="fixed-bottom bg-dark">
        <%- include('./partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
